{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}

	<main class="mainForm d-flex justify-content-center">
		<div class="formBG">
			<form action="{{ path('app_login') }}" method="post">

				<div class="form-group divForm">
					<label for="username" class="textFormLabel">Email:</label>
					<input type="text email" id="username" name="_username" class="form-control textForm rounded-0" value="{{ last_username }}">
				</div>

				<div class="form-group">
					<label for="password" class="textFormLabel">Password:</label>
					<input type="password" id="password" name="_password" class="form-control textForm rounded-0">
				</div>

				<input type="hidden" name="{{ path('app_home') }}" value="/">

				<button type="submit" class="btnCineCar">LOGIN</button>
				<a href="/register" class="">REGISTER</a>

				{% if error %}
					<div class="textFormLabel">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

			</form>
		</div>
	</main>
{% endblock %}

