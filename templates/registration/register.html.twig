{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

<h1 class="text-center m-2">Register</h1>
	<main class="mainForm d-flex justify-content-center">
		<div class="formBG">
			<form action="{{ path('app_register') }}" method="post">

				{{ form_start(registrationForm) }}
				<div class="form-group">
					<label for="username" class="textFormLabel">
						{{ form_row(registrationForm.firstname) }}</label>
				</div>
				<div class="form-group">
					<label for="username" class="textFormLabel">
						{{ form_row(registrationForm.lastname) }}</label>
				</div>
				<div class="form-group">
					<label for="email" class="textFormLabel">
						{{ form_row(registrationForm.email) }}</label>
				</div>
				<div class="form-group">
					<label for="email" class="textFormLabel">{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
                        }) }}</label>
				</div>

				<div class="textFormLabel">{{ form_row(registrationForm.agreeTerms) }}</div>

				<button type="submit" class="btnCineCar">Register</button>
				{{ form_end(registrationForm) }}
			</form>
		</div>
	</main>
{% endblock %}
