{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<main class="mainForm d-flex justify-content-center">

		<div class="">

			<form action="{{ path('app_register') }}" method="post">

				{{ form_start(registrationForm) }}

				<div class="form-group text-white mt-5">
					<input type="hidden" class="form-control textFormLabel textForm rounded-0">
					{{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control rounded-0 textForm text-white'}}) }}
				</div>

				<div class="form-group text-white mt-2">
					{{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control rounded-0 text-white'}})  }}
				</div>

				<div class="form-group text-white mt-2">
					{{ form_row(registrationForm.email, {'attr': {'class': 'form-control rounded-0 text-white'}})  }}
				</div>


				<div class="form-group text-white mt-2">
					{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control rounded-0 text-white'}})  }}
				</div>

				<div class="textFormLabel">{{ form_row(registrationForm.agreeTerms) }}</div>

				<button type="submit" class="btnCineCar">Register</button>

				{{ form_end(registrationForm) }}

			</form>
			<a href="/login" class="text-decoration-none">
				<p class="text-white mt-4 mb-5">You already have an account ? Login</p>
			</a>
		</div>
	</main>
{% endblock %}
