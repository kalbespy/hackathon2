{% extends 'base.html.twig' %}

{% block title %}Vehicle index
{% endblock %}

{% block body %}

	<h1 class="homeTitle text-center m-5">Vehicle</h1>

	<div class="container text-center">
		<div class="row">


			{% for vehicle in vehicles %}

				<div class="col-xl-3 col-lg-4 col-md-6 col-sm-8">
					<div class="card mb-5 cineCard" style="width: 18rem;">
						<img src="{{asset('build/images/' ~ vehicle.picture)}}" class="card-img-top " alt="...">
						<div class="card-body">
							<h4 class="card-title h4CineCar">{{ vehicle.title }}</h4>
							<p class="card-text">{{ vehicle.movie.title }}:
								{{ vehicle.movie.year }}</p>
							<a href="{{ path('app_vehicle_show', {'id': vehicle.id}) }}">
								<button class="btnCardCineCar">
									SELECT</button>
							</a>

						</div>
					</div>
				</div>

			{% else %}

				<td colspan="18">no records found</td>
			{% endfor %}
		</div>
	</div>
	<a href="{{ path('app_vehicle_new') }}">Create new</a>
{% endblock %}
